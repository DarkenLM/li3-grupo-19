{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/a.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "C Debug (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/main",
            "preLaunchTask": "Debug C project",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Solution",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/trabalho-pratico/${input:binFile}",
            "args": ["${input:arg1}", "${input:arg2}"],
            "cwd": "${workspaceFolder}/trabalho-pratico",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "preLaunchTask": "make-prepare-debug",
            "miDebuggerPath": "/usr/bin/gdb",
            "stopAtEntry": false,
            "serverLaunchTimeout": 5000
        },
        {
            "name": "Debug Solution (Tests)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/trabalho-pratico/${input:testBinFile}",
            "args": ["${input:arg1}", "${input:arg2}", "${input:arg3}"],
            "cwd": "${workspaceFolder}/trabalho-pratico",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "preLaunchTask": "make-prepare-debug",
            "miDebuggerPath": "/usr/bin/gdb",
            "stopAtEntry": false,
            "serverLaunchTimeout": 5000
        },
        {
            "name": "Debug Solution (Interactive Mode)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/trabalho-pratico/${input:binFile}",
            "args": [],
            "cwd": "${workspaceFolder}/trabalho-pratico",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "source ${input:gdbinit}"
                }
            ],
            "preLaunchTask": "make-prepare-debug",
            "miDebuggerPath": "/usr/bin/gdb",
            "stopAtEntry": false,
            "serverLaunchTimeout": 5000
        },
        {
            "name": "[VAL] Debug Solution (Interactive Mode)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/trabalho-pratico/${input:binFile}",
            "args": [],
            "cwd": "${workspaceFolder}/trabalho-pratico",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "source ${input:gdbinit}"
                },
                {
                    "text": "target remote | /usr/bin/vgdb --pid=${input:gdbpid}"
                }
            ],
            "preLaunchTask": "make-prepare-debug",
            "miDebuggerPath": "/usr/bin/gdb",
            "stopAtEntry": false,
            "serverLaunchTimeout": 5000
        }
    ],
    "inputs": [
        {
            "id": "binFile",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "make locate",
                "cwd": "${workspaceFolder}/trabalho-pratico",
                "useFirstResult": true
            }
        },
        {
            "id": "testBinFile",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "make locate_test",
                "cwd": "${workspaceFolder}/trabalho-pratico",
                "useFirstResult": true
            }
        },
        {
            "id": "arg1",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "sed '1q;d' vscode_args.txt",
                "cwd": "${workspaceFolder}/trabalho-pratico",
                "useFirstResult": true
            }
        },
        {
            "id": "arg2",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "sed '2q;d' vscode_args.txt",
                "cwd": "${workspaceFolder}/trabalho-pratico",
                "useFirstResult": true
            }
        },
        {
            "id": "arg3",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "sed '3q;d' vscode_args.txt",
                "cwd": "${workspaceFolder}/trabalho-pratico",
                "useFirstResult": true
            }
        },
        {
            "id": "gdbinit",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "sed '4q;d' vscode_args.txt",
                "cwd": "${workspaceFolder}/trabalho-pratico",
                "useFirstResult": true
            }
        },
        {
            "id": "gdbpid",
            "description": "Remote GDBServer target PID:",
            "type": "promptString"
        }
    ]
}